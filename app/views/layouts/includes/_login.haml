- if current_user.nil?
  = form_for(:user, html: { class: "navbar-form navbar-right" }, :url => session_path(:user)) do |f|
    .form-group
      = f.email_field :email, :class => "form-control", :placeholder => "E-mail", autofocus: true 

    .form-group
      = f.password_field :password, :class => "form-control", :placeholder => "Password", autocomplete: "off"

    - if Devise.mappings[:user].rememberable?
      .form-group
        = f.check_box :remember_me
        %span.save
          Save?
    
    %button{:type => 'submit', :class => 'btn btn-success'}
      Sign in
- else
  .navbar-form.navbar-right
    = button_to('Sign out', destroy_user_session_path, method: :delete, :class => 'btn btn-warning')

